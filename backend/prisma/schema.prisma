// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String
  employeeId  String?  @unique
  department  String?
  position    String?
  phone       String?
  role        UserRole @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  papers       Paper[]
  applications PaperApplication[]
  reviews      PaperApplication[] @relation("Reviewer")

  // Gamification Relations
  achievements              UserAchievement[]
  level                     UserLevel?
  streaks                   Streak[]
  challengeParticipations   ChallengeParticipant[]
  gamificationNotifications GamificationNotification[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  REVIEWER
}

// Paper model
model Paper {
  id              String    @id @default(uuid())
  title           String
  titleChinese    String?
  paperType       PaperType
  publicationDate DateTime?
  volume          String?
  issue           String?
  pages           String?
  doi             String?   @unique
  pmid            String?
  pdfUrl          String?
  pdfFilename     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  authors       Author[]
  journalInfo   JournalInfo?
  conferenceInfo ConferenceInfo?
  applications  PaperApplication[]
  submittedBy   User?              @relation(fields: [submittedById], references: [id])
  submittedById String?

  @@map("papers")
}

enum PaperType {
  ORIGINAL
  CASE_REPORT
  REVIEW
  LETTER
  NOTE
  COMMUNICATION
  IMAGE
  ABSTRACT_POSTER
  ABSTRACT_ORAL
  COMMENT
  BOOK_CHAPTER
  TRANSLATION
}

// Author model
model Author {
  id              String  @id @default(uuid())
  name            String
  email           String?
  affiliation     String
  department      String?
  isFirst         Boolean @default(false)
  isCorresponding Boolean @default(false)
  order           Int

  // Relations
  paper   Paper  @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId String

  @@map("authors")
}

// Journal Information
model JournalInfo {
  id           String   @id @default(uuid())
  name         String
  abbreviation String?
  issn         String?
  isSci        Boolean  @default(false)
  isSsci       Boolean  @default(false)
  impactFactor Float?
  quartile     Quartile?
  ranking      Int?
  totalInField Int?
  category     String?

  // Relations
  paper   Paper  @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId String @unique

  @@map("journal_info")
}

enum Quartile {
  Q1
  Q2
  Q3
  Q4
}

// Conference Information
model ConferenceInfo {
  id               String           @id @default(uuid())
  name             String
  location         String?
  date             DateTime?
  type             ConferenceType
  presentationType PresentationType

  // Relations
  paper   Paper  @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId String @unique

  @@map("conference_info")
}

enum ConferenceType {
  INTERNATIONAL
  DOMESTIC
}

enum PresentationType {
  ORAL
  POSTER
}

// Paper Application model
model PaperApplication {
  id              String            @id @default(uuid())
  applicantType   ApplicantType
  status          ApplicationStatus @default(PENDING)
  rewardAmount    Float?
  rewardFormula   String?
  submittedAt     DateTime          @default(now())
  reviewedAt      DateTime?
  reviewComment   String?

  // Theme analysis
  hasHolisticCare    Boolean @default(false)
  hasMedicalQuality  Boolean @default(false)
  hasMedicalEducation Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  paper       Paper   @relation(fields: [paperId], references: [id])
  paperId     String
  applicant   User    @relation(fields: [applicantId], references: [id])
  applicantId String
  reviewer    User?   @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewerId  String?

  @@map("paper_applications")
}

enum ApplicantType {
  FIRST_AUTHOR
  CORRESPONDING
  CO_AUTHOR
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
  REVISION
}

// Announcement model
model Announcement {
  id        String           @id @default(uuid())
  title     String
  content   String
  type      AnnouncementType
  isActive  Boolean          @default(true)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("announcements")
}

enum AnnouncementType {
  INFO
  SUCCESS
  WARNING
  URGENT
}

// Career Record for tracking yearly summaries
model CareerRecord {
  id               String   @id @default(uuid())
  userId           String
  year             Int
  totalReward      Float    @default(0)
  sciPaperCount    Int      @default(0)
  nonSciPaperCount Int      @default(0)
  conferenceCount  Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, year])
  @@map("career_records")
}

// AI Analysis Log for tracking AI usage
model AIAnalysisLog {
  id           String   @id @default(uuid())
  paperId      String?
  userId       String
  analysisType String
  inputData    Json?
  outputData   Json?
  confidence   Float?
  createdAt    DateTime @default(now())

  @@map("ai_analysis_logs")
}

// ============================================
// Gamification Models (Octalysis Framework)
// ============================================

// Achievement Definition
model Achievement {
  id          String              @id @default(uuid())
  name        String
  nameEn      String
  description String
  icon        String
  category    AchievementCategory
  tier        AchievementTier
  requirement Json                // Stores AchievementRequirement
  isHidden    Boolean             @default(false)
  createdAt   DateTime            @default(now())

  userAchievements UserAchievement[]

  @@map("achievements")
}

enum AchievementCategory {
  PAPER
  IMPACT
  COLLABORATION
  STREAK
  SPECIAL
}

enum AchievementTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
}

// User Achievement (Unlocked achievements)
model UserAchievement {
  id            String      @id @default(uuid())
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@map("user_achievements")
}

// User Level and Points
model UserLevel {
  id        String   @id @default(uuid())
  userId    String   @unique
  level     Int      @default(1)
  points    Int      @default(0)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_levels")
}

// Streak Records (Loss & Avoidance)
model Streak {
  id        String     @id @default(uuid())
  userId    String
  type      StreakType
  count     Int        @default(0)
  lastDate  DateTime
  bestCount Int        @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@map("streaks")
}

enum StreakType {
  YEARLY_PUBLICATION
  MONTHLY_SUBMISSION
  CONSECUTIVE_APPROVAL
}

// Challenge System (Scarcity & Impatience)
model Challenge {
  id          String    @id @default(uuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  targetType  String    // paper_count, sci_count, total_if, department_rank
  targetValue Int
  bonusRate   Float     // e.g., 0.1 for 10% bonus
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  participants ChallengeParticipant[]

  @@map("challenges")
}

// Challenge Participation
model ChallengeParticipant {
  id          String   @id @default(uuid())
  challengeId String
  userId      String
  joinedAt    DateTime @default(now())
  progress    Int      @default(0)
  isCompleted Boolean  @default(false)

  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([challengeId, userId])
  @@map("challenge_participants")
}

// Achievement Notifications
model GamificationNotification {
  id        String   @id @default(uuid())
  userId    String
  type      String   // achievement_unlocked, level_up, streak_milestone, challenge_completed, rank_change
  title     String
  message   String
  icon      String?
  data      Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("gamification_notifications")
}
